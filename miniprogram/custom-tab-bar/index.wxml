<view class="tab-bar">
  <view
    wx:for="{{list}}"
    wx:key="index"
    class="tab-item {{selected === index ? 'active' : ''}}"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="tab-icon icon-{{item.icon}} {{selected === index ? 'active' : ''}}"></view>
    <text class="tab-label">{{item.text}}</text>
  </view>
</view>
